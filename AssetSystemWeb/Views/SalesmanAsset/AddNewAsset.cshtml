    <script src="@Url.Content("~/Scripts/CustomScripts/AssetScripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/CustomScripts/AssetDetailRows.js")" type="text/javascript"></script>*@

@Scripts.Render("~/bundles/AddNewAssetDetail")

