@model SystemEntities.Models.AssetItemDetail


<tr>
    @using (Html.BeginCollectionItem("AssetItemDetails"))
    {

        <td>

            <div class="col-sm-12 form-group has-error has-feedback" style="margin-top:10px;">
                @Html.DropDownListFor(m => m.ItemType, ViewBag.ItemTypes as SelectList, new { @class = "ItemTypeSelect" })
            </div>

        </td>
            @*<td>@Html.TextBoxFor(m => m.ItemDescription, new { Id = "ItemDescription", @class = "form-control ItemDetailDescription" })</td>*@

            <td>
                <div class="col-sm-12 form-group  has-feedback" style="margin-top:10px;">
                    @Html.TextBoxFor(m => m.ItemDescription, new { Id = "ItemDescription", @class = "form-control ItemDetailDescription" })
                </div>
            </td>

            <td>

                    <div class="col-sm-12 form-group  has-feedback" style="margin-top:10px;">
                        @Html.TextBoxFor(m => m.PartNumber, new { Id = "PartNumber", @class = "form-control inputDescription ItemDetailPartNumber" })
                    </div>
                </td>

            <td>

                <div class="col-sm-12 form-group has-feedback errorBorder" style="margin-top:10px;">
                    @Html.TextBoxFor(m => m.SerialNumber, new { @class = "form-control inputSerialnumber ItemSerialDetail" })
                    @*<span  style="visibility:hidden;" class="glyphicon errorIcon glyphicon-warning-sign form-control-feedback"></span>*@
                    <span class="glyphicon errorIcon form-control-feedback"></span>
                </div>
            </td>
            <td>
                <div class="col-sm-12 form-group errorBorder has-feedback" style="margin-top:10px;">
                    @Html.TextBoxFor(m => m.ItemKeyDetail, new { @class = "form-control inputKeydetail ItemKeyDetail" })
                    @*<span style="visibility:hidden;" class="glyphicon errorIcon glyphicon-warning-sign form-control-feedback"></span>*@
                    <span class="glyphicon errorIcon form-control-feedback"></span>
                </div>
            </td>
            <td>
                <div class="col-sm-12 form-group has-feedback" style="margin-top:10px;">
                    @Html.TextBoxFor(m => m.ItemRemarks, new { @class = "form-control inputRemarks" })
                </div>
            </td>

            <td>
                <button type="button" class="btn btn-danger btnDelete">Delete</button>
            </td>
    }
</tr>

