@model  SystemEntities.Models.Consignment

<div class="modal fade" id="UserLookUp" tabindex="-1" role="dialog" aria-labelledby="UserLookUp-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="UserLookUp-label">UserList</h4>
            </div>
            <div class="modal-body">
                @{Html.RenderAction("UserLookup", "SystemUser");}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="page-header">
    <h2 class="text-center">Create Consignments</h2>
</div>

@using (Html.BeginForm("AddNewConsignment", "Consignment", FormMethod.Post, new { Id = "consignmentForm" }))
{


    <div class="panel panel-default">
        <div class="panel-heading">Consignee Details</div>
        <div class="panel-body">
            <div class="row rowWithMargin">
                <div class="row">





                    <div class="col-md-4">
                        <div class="col-md-5">
                            @Html.Label("Consignee Id:")
                        </div>
                        <div class="col-md-7">
                            @Html.Hidden("UserId")
                            <div class=" form-group input-group">
                                @Html.TextBox("CompanyIdNum", "", new { @class = "form-control" })
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" id="showLookup"><i class="glyphicon glyphicon-search"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="col-md-3">
                            @Html.Label("Date Issue:")
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.DateIssueDate, new { @class = "form-control", placeholder = "Input Remarks", type="Date" })
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="col-md-3">
                            @Html.Label("Remarks:")
                        </div>
                        <div class="col-md-9">
                            @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control inputRemarks", placeholder = "Input Remarks", style = "resize:none;" })
                        </div>
                    </div>
                </div>
                <hr style="margin-top:10px;margin-bottom:10px;" />
                <div class="row" id="rowUserDetails">

                    <div class="col-md-4">

                        <div class="col-md-5">


                            <label>Firstname:</label>

                        </div>
                        <div class="col-md-7">


                            <label class="UserFirstname"></label>

                        </div>

                    </div>
                    <div class="col-md-4">

                        <div class="col-md-5">

                            <label>Middlename:</label>

                        </div>
                        <div class="col-md-7">


                            <label class="UserMiddlename"></label>

                        </div>

                    </div>
                    <div class="col-md-4">

                        <div class="col-md-5">

                            <label>Surname:</label>

                        </div>
                        <div class="col-md-7">


                            <label class="UserSurname"></label>

                        </div>

                    </div>


                </div>
                <div class="row">
                    <div class="col-md-12" id="UserDetail">
                        <div class="col-md-12">
                            <div class="alert alert-danger" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                User Not Found !
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">Insert new Asset</div>
        <div class="panel-body">
            <div class="row">


                <div class="col-md-4">
                    <div class="col-md-5">
                        @Html.Label("Asset Number:")
                    </div>
                    <div class="col-md-7">
                        @Html.TextBox("AssetNumber", null, new { @class = "form-control", placeholder = "Input Asset Number" })
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="col-md-5">
                        @Html.Label("Asset Description:")
                    </div>
                    <div class="col-md-7">
                        <label id="AssetDescription"></label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-12">
                        <button type="button" id="AddConsignmentAsset" class="btn btn-success">Add Asset</button>
                        <button type="button" id="ClearConsignmentAsset" class="btn btn-danger">Clear</button>
                    </div>

                </div>

                <hr />
                <div class="col-md-12" id="AssetError">
                    <div class="col-md-12">
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            Asset Not Found !
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="panel panel-default" style="min-height:100%;">
        <div class="panel-heading">For Consign Assets</div>
        <div class="panel-body">
            <table class="table" id="assetDetails">
                <thead>
                    <tr>
                        <th>Asset Number</th>
                        <th>Item Id</th>
                        <th>Item Description</th>
                        <th>Serial</th>
                        <th>Item Key Detail</th>
                        <th>Delete</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
              
                </tbody>
            </table>

        </div>
    </div>



}
<div class="panel panel-default">
    <div class="panel-heading">Actions</div>
    <div class="panel-body">
        <button type="button" id="submitConsigment" class="btn btn-success">Submit</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
    </div>
</div>

@Scripts.Render("~/bundles/CreateCosignment")
