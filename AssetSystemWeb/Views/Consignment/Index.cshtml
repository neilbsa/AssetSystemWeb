@model IEnumerable<SystemEntities.Models.Consignment>



<hr />
<div class="page-header">
    <h1 class="text-center">Consignments</h1>
</div>
<div>
    <div class="panel panel-default">
        <div class="panel-heading">Actions</div>
        <div class="panel-body">
            @Html.ActionLink("Create New", "CreateConsignments", null, new { @class = "btn btn-success" })
        </div>
    </div>
   
</div>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">Consignment List</div>
    <div class="panel-body">
        <table class="table table-hover" id="consignmentTable">
            <thead>

                <tr>

                    <th>
                        @Html.Label("Consignment Number")
                    </th>
                    <th>
                        @Html.Label("Consigned To")
                    </th>
                    <th>
                        @Html.Label("DateConsigned")
                    </th>
                    <th>
                        @Html.Label("ConsignedBy")
                    </th>
                    <th>
                        @Html.Label("Remarks")
                    </th>
                    <th>

                    </th>

                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConsignmentNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentUser.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateIssueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            <div style="word-wrap:break-word;">
                                @Html.DisplayFor(m => item.Remarks, new { @class = "form-control" })
                            </div>
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { Id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@Scripts.Render("~/bundles/ConsignmentIndex")