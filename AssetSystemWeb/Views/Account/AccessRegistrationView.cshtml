@model SystemEntities.Models.RegisterViewModel


@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "RegisterSystemAccess" }))
{
    @Html.AntiForgeryToken()





    <ul class="nav nav-pills">
        <li class="active">
            <a href="#UserAccessPersonalDetails" data-toggle="tab">User Personal Detail</a>
        </li>
        <li>
            <a href="#UserAccessDetails" data-toggle="tab">User Access Info</a>
        </li>
        <li>
            <a href="#UserRoles" data-toggle="tab">Roles</a>
        </li>

    </ul>

    <div class="tab-content clearfix">
        <div class="tab-pane active" id="UserAccessPersonalDetails">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Firstname, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control inputFirstname" })
                            @Html.ValidationMessageFor(m => m.Firstname, null, new { @class = "text-danger Validators" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Middlename, new { @class = "col-md-2 control-label " })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Middlename, new { @class = "form-control inputMiddlename" })
                            @Html.ValidationMessageFor(m => m.Middlename, null, new { @class = "text-danger Validators" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control inputSurname" })
                            @Html.ValidationMessageFor(m => m.Surname, null, new { @class = "text-danger Validators" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control inputEmailAddress" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger Validators" })
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="tab-pane" id="UserAccessDetails">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control inputUsername" })
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger Validators", id = "ValidationErrorUsername" })
                            <div role="alert" id="UsernameValidation"></div>
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control inputPassword" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger Validators" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control inputPassword" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger Validators" })
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="tab-pane" id="UserRoles">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Roles
                </div>
                <div class="panel-body" style="padding:0;">
                    <div class="row">
                        <div class="col-xs-5" style="padding-left:32px; padding-right:0;">
                            <div class="row col-xs-12" style="padding:0;font-weight:bold;">
                                Available Roles
                            </div>
                            <div class="row col-xs-12" style="padding:0;">
                                @Html.ListBoxFor(m => m.SystemRoles, Model.SystemRoles.Select(item => new SelectListItem { Text = item, Value = item, Selected = true }), new { style = "width:inherit; Height: 100px;", id = "SystemRoles" })
                            </div>

                        </div>

                        <div class="col-xs-2" style="padding:29px;">
                            <div class="row col-xs-12" style="padding:0;">
                                <div class="col-xs-12" style="padding:0;">
                                    <button type="button" class="btn btn-success" id="AddRoles"><i class="glyphicon glyphicon-arrow-right"></i></button>
                                </div>
                                <div class="col-xs-12" style="padding:0;">
                                    <button type="button" id="RemoveRole" class="btn btn-success"><i class="glyphicon glyphicon-arrow-left"></i></button>
                                </div>
                            </div>
                        </div>


                        <div class="col-xs-5" style="padding:0;">
                            <div class="row col-xs-12" style="padding:0;font-weight:bold;">
                                Current User Roles
                            </div>
                            <div class="row col-xs-12" style="padding:0;">
                                @Html.ListBoxFor(m => m.IncludedRoles, Model.IncludedRoles.Select(item => new SelectListItem { Text = item, Value = item, Selected = true }), new { style = "width:inherit; Height: 100px;", id = "IncludedRoles" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">

                </div>

            </div>



            <div class="panel panel-default">
                <div class="panel-heading">
                    Companies
                </div>
                <div class="panel-body" style="padding:0;">
                    <div class="row">
                        <div class="col-xs-5" style="padding-left:32px; padding-right:0;">
                            <div class="row col-xs-12" style="padding:0;font-weight:bold;">
                           Available Companies
                            </div>
                            <div class="row col-xs-12" style="padding:0;">
                                @Html.ListBoxFor(m => m.Companies, ViewBag.Companies as SelectList , new { style = "width:inherit; Height: 100px;", id = "Companies" })
                            </div>
                            @*Model.Companies.Select(item => new SelectListItem { Text = item.Name, Value = item.Id.ToString() })*@
                        </div>




                        <div class="col-xs-2" style="padding:29px;">
                            <div class="row col-xs-12" style="padding:0;">
                                <div class="col-xs-12" style="padding:0;">
                                    <button type="button" id="btnAddCompany" class="btn btn-success" ><i class="glyphicon glyphicon-arrow-right"></i></button>
                                </div>
                                <div class="col-xs-12" style="padding:0;">
                                    <button type="button" id="btnRemoveCompany" class="btn btn-success"><i class="glyphicon glyphicon-arrow-left"></i></button>
                                </div>
                            </div>
                        </div>





                        <div class="col-xs-5" style="padding:0;">
                            <div class="row col-xs-12" style="padding:0;font-weight:bold;">
                                Current User Companies
                            </div>
                            <div class="row col-xs-12" style="padding:0;">
                                @Html.ListBoxFor(m => m.AssignedCompanies,ViewBag.AssignedCompany as SelectList , new { style = "width:inherit; Height: 100px;", id = "AssignedCompanies" })
                            </div>
                        </div>
                        @*Model.AssignedCompanies.Select(item => new SelectListItem { Text = item.Name, Value = item.Id.ToString(), Selected = true })*@
                    </div>
                </div>
                <div class="panel-footer">

                </div>

            </div>




        </div>
    </div>
}

           
<link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />

