@model IEnumerable<SystemEntities.Models.ApplicationUser>
@{

    ViewBag.Title = "Index";
}

<div class="modal fade" id="modalAccess" tabindex="-1" role="dialog" aria-labelledby="userModel-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="userModel-label"><span></span></h4>
            </div>
            <div class="modal-body">

            </div>

            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>



<div class="panel panel-default">
    <div class="panel-heading">
        <h3>User Access Table</h3>
    </div>
    <div class="panel-body" >
        <button class="btn btn-primary btn-sm" id="CreateNewAccess">Create User</button>

        <br />
        <br />
    


        <div id="AccessUsertableDiv" >
            <table class="table table-hover" id="UserAccessTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Username")
                        </th>
                        <th>
                            @Html.DisplayName("Firstname")
                        </th>
                        <th>
                            @Html.DisplayName("Middlename")
                        </th>
                        <th>
                            @Html.DisplayName("Lastname")
                        </th>
                        <th>
                            @Html.DisplayName("Email")
                        </th>

                      </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.Id">
                            @*@Html.Hidden(item.Id,null,new {@class="userId" })*@
                            <td>
                               @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Firstname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Middlename)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="panel-footer">

    </div>

</div>



<script src="@Url.Content("~/Scripts/jquery-3.1.1.js")" type="text/javascript"></script>

@*<script src="@Url.Content("~/Scripts/CustomScripts/UserProfile.js")" type="text/javascript"></script>*@

@Scripts.Render("~/bundles/AccessIndex")